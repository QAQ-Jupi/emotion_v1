/* pages/statistics/statistics.wxss */
page{
  background-color: #c8edff;

}

.times{
  position: absolute;
  display: flex;
  
  width: 100%;
  height: 10%;

  top: 2%;

  /* background-color: rgb(128, 39, 39); */

  justify-content: space-around;
}

.box{
  width: 300rpx;
  height: 100%;

  /* background-color: rgb(140, 203, 255); */
  background-color: #fff;
  border-radius: 20rpx;
}

.title{
  position: relative;
  display: flex;

  top: 5%;
  left: 7%;
  font-size: small;
  color: #00AAFF;
}

.num{
  position: absolute;
  display: flex;

  width: 300rpx;
  bottom: 7%;

  font-size: large;
  font-weight: bold;
  justify-content: center;

  color: #00AAFF;
}

.chart{
  position: absolute;
  display: flex;

  width: 90%;
  height: 86%;

  top: 14%;
  left: 5%;

  /* background-color: rgb(164, 186, 255); */
  background-color: #fff;
}

.bar{
  position: absolute;
  display: flex;

  width: 100%;
  height: 10%;

  /* background-color: rgb(214, 215, 255); */
  justify-content: center;
  align-items: center;

}

.bar view{
  display: flex;

  width: 20%;
  height: 50%;

  background-color: #fff;
  justify-content: center;
  align-items: center;

  /* border:solid;
  border-width: 2px 2px 2px 0;
  border-color: #c8edff; */

  font-size: small;
}

.borderAll{
  border:solid;
  border-width: 2px 2px 2px 0;
  border-color: #c8edff;
}

.leftRadius{
  border:solid;
  border-width: 2px 2px 2px 2px;
  border-color: #c8edff;
  
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}

.rightRadius{
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.time{
  position: absolute;
  display: flex;

  width: 100%;
  height: 5%;

  top: 10%;

  /* background-color: rgb(198, 225, 255); */

  font-size: small;

  align-items: center;
  justify-content: center;
}